// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Authentication table - handles login credentials and account status
model Auth {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Authentication identifiers
  email    String? @unique @db.Text
  phone    String? @unique @db.Text
  googleId String? @unique @map("google_id") @db.Text

  // Verification flags
  emailVerified Boolean @default(false) @map("email_verified")
  phoneVerified Boolean @default(false) @map("phone_verified")

  // Account status
  isActive      Boolean   @default(true) @map("is_active")
  isBlocked     Boolean   @default(false) @map("is_blocked")
  blockedReason String?   @map("blocked_reason") @db.Text
  blockedAt     DateTime? @map("blocked_at")

  // Timestamps
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  lastLogin DateTime? @map("last_login")

  // Relations
  user     User?         @relation("AuthToUser")
  sessions AuthSession[]

  @@map("auth")
}

// User sessions table - tracks refresh tokens and device info
model AuthSession {
  id     String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text
  authId String @map("auth_id") @db.Text
  auth   Auth   @relation(fields: [authId], references: [id], onDelete: Cascade)

  // Session data
  refreshTokenHash String @unique @map("refresh_token_hash") @db.Text

  // Device & Security info
  deviceInfo Json?   @map("device_info") @db.JsonB
  ipAddress  String? @map("ip_address") @db.Inet
  userAgent  String? @map("user_agent") @db.Text

  // Session lifecycle
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  lastUsedAt DateTime @default(now()) @map("last_used_at")

  // Session status
  revoked Boolean @default(false)

  @@index([authId], map: "auth_sessions_auth_id_idx")
  @@index([expiresAt], map: "auth_sessions_expires_at_idx")
  @@index([authId, expiresAt, revoked], map: "auth_sessions_active_idx")
  @@index([ipAddress], map: "auth_sessions_ip_address_idx")
  @@index([refreshTokenHash, expiresAt, revoked], map: "auth_sessions_validation_idx")
  @@map("auth_sessions")
}

// User profile table - stores user information separate from auth
model User {
  id     String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text
  authId String @unique @map("auth_id") @db.Text
  auth   Auth   @relation("AuthToUser", fields: [authId], references: [id], onDelete: Cascade)

  // Profile information
  firstName   String? @map("first_name") @db.VarChar(100)
  lastName    String? @map("last_name") @db.VarChar(100)
  displayName String? @map("display_name") @db.VarChar(150)
  avatarUrl   String? @map("avatar_url") @db.Text

  // Contact & Address
  addressLine1 String? @map("address_line1") @db.VarChar(255)
  addressLine2 String? @map("address_line2") @db.VarChar(255)
  city         String? @db.VarChar(100)
  state        String? @db.VarChar(100)
  postalCode   String? @map("postal_code") @db.VarChar(20)
  country      String? @db.VarChar(100)

  // Additional profile data
  dateOfBirth DateTime? @map("date_of_birth") @db.Date

  // User preferences
  preferences Json @default("{}") @db.JsonB

  // Metadata
  onboardingCompleted Boolean   @default(false) @map("onboarding_completed")
  profileCompletedAt  DateTime? @map("profile_completed_at")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  orders       Order[]       @relation("UserToOrders")
  orderReviews OrderReview[]
  itemReviews  ItemReview[]

  @@index([firstName, lastName], map: "users_full_name_idx")
  @@index([onboardingCompleted], map: "users_onboarding_idx")
  @@index([createdAt(sort: Desc)], map: "users_created_at_idx")
  @@map("users")
}

// Products table
model Product {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Basic Info
  name   String  @db.VarChar(255)
  slug   String  @unique @db.VarChar(255)
  flavor String? @db.VarChar(100)
  brand  String  @default("Swaadly") @db.VarChar(100)

  // Description & Usage
  aboutProduct         String? @map("about_product") @db.Text
  bestWayToEat         String? @map("best_way_to_eat") @db.Text
  bestWayToEatImageUrl String? @map("best_way_to_eat_image_url") @db.Text

  // Product Tags
  tags String[] @default([])

  // Status
  isActive Boolean @default(true) @map("is_active")

  // Display Order (manual sorting)
  displayOrder Int @default(0) @map("display_order")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  variants    ProductVariant[]
  images      ProductImage[]
  cartImages  ProductCartImage[]
  reviews     Review[] // Legacy reviews (pre-order system)
  itemReviews ItemReview[] // New order-linked item reviews
  orderItems  OrderItem[]        @relation("OrderItemToProduct")

  @@index([isActive], map: "products_is_active_idx")
  @@index([tags], map: "products_tags_idx", type: Gin)
  @@index([displayOrder], map: "products_display_order_idx")
  @@map("products")
}

// Product Variants table
model ProductVariant {
  id        String  @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text
  productId String  @map("product_id") @db.Text
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // SKU & Barcode
  sku     String  @unique @db.VarChar(100)
  barcode String? @db.VarChar(100)

  // Variant Attributes
  weight     Int    @db.Integer
  weightUnit String @default("g") @map("weight_unit") @db.VarChar(10)

  // Nutrition Info
  proteinQuantity Decimal? @map("protein_quantity") @db.Decimal(6, 2)

  // Pricing
  mrp                Decimal @db.Decimal(10, 2)
  sellingPrice       Decimal @map("selling_price") @db.Decimal(10, 2)
  discountPercentage Decimal @default(0.00) @map("discount_percentage") @db.Decimal(5, 2)

  // Inventory
  stockQuantity     Int @default(0) @map("stock_quantity") @db.Integer
  lowStockThreshold Int @default(10) @map("low_stock_threshold") @db.Integer

  // Status
  isAvailable Boolean @default(true) @map("is_available")
  isDefault   Boolean @default(false) @map("is_default")

  // Display Order
  displayOrder Int @default(0) @map("display_order") @db.Integer

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  orderItems  OrderItem[]  @relation("OrderItemToVariant")
  reviews     Review[] // Legacy reviews (pre-order system)
  itemReviews ItemReview[] // New order-linked item reviews

  @@index([productId], map: "product_variants_product_id_idx")
  @@index([isAvailable], map: "product_variants_is_available_idx")
  @@index([stockQuantity], map: "product_variants_stock_idx")
  @@index([productId, isDefault], map: "product_variants_is_default_idx")
  @@map("product_variants")
}

// Image Device Type Enum
enum ImageDeviceType {
  DESKTOP
  MOBILE

  @@map("image_device_type")
}

// Product Images table (for product page display)
model ProductImage {
  id        String  @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text
  productId String  @map("product_id") @db.Text
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Image Details
  imageUrl   String          @map("image_url") @db.Text
  deviceType ImageDeviceType @map("device_type")
  altText    String?         @map("alt_text") @db.VarChar(255)

  // Display
  displayOrder Int     @default(0) @map("display_order") @db.Integer
  isPrimary    Boolean @default(false) @map("is_primary")

  // Timestamp
  createdAt DateTime @default(now()) @map("created_at")

  @@index([productId], map: "product_images_product_id_idx")
  @@index([productId, isPrimary], map: "product_images_is_primary_idx")
  @@index([productId, displayOrder], map: "product_images_display_order_idx")
  @@index([productId, deviceType], map: "product_images_device_type_idx")
  @@map("product_images")
}

// Product Cart Images table (for cart and order page display)
model ProductCartImage {
  id        String  @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text
  productId String  @map("product_id") @db.Text
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Image Details
  imageUrl   String          @map("image_url") @db.Text
  deviceType ImageDeviceType @map("device_type")
  altText    String?         @map("alt_text") @db.VarChar(255)

  // Timestamp
  createdAt DateTime @default(now()) @map("created_at")

  @@index([productId], map: "product_cart_images_product_id_idx")
  @@index([productId, deviceType], map: "product_cart_images_device_type_idx")
  @@map("product_cart_images")
}

// ============================================
// COUPONS SYSTEM
// ============================================

// Coupon Discount Type
enum CouponDiscountType {
  PERCENTAGE // e.g., 10% off
  FIXED      // e.g., ₹100 off

  @@map("coupon_discount_type")
}

// Coupon Status
enum CouponStatus {
  ACTIVE
  INACTIVE
  EXPIRED
  EXHAUSTED // All uses consumed

  @@map("coupon_status")
}

// Main Coupons table
model Coupon {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Coupon Identification
  code        String @unique @db.VarChar(50) // e.g., "FIRST300", "WELCOME10"
  name        String @db.VarChar(100) // Display name, e.g., "First Order Discount"
  description String? @db.Text // Detailed description for admin

  // Discount Configuration
  discountType  CouponDiscountType @map("discount_type")
  discountValue Decimal            @map("discount_value") @db.Decimal(10, 2) // 10 for 10% or ₹10

  // Caps and Limits
  maxDiscountAmount Decimal? @map("max_discount_amount") @db.Decimal(10, 2) // Max discount for percentage coupons
  minOrderAmount    Decimal? @map("min_order_amount") @db.Decimal(10, 2) // Minimum cart value to apply

  // Usage Limits
  maxTotalUses    Int?  @map("max_total_uses") @db.Integer // Total times coupon can be used (null = unlimited)
  maxUsesPerUser  Int   @default(1) @map("max_uses_per_user") @db.Integer // Times a single user can use
  currentUseCount Int   @default(0) @map("current_use_count") @db.Integer // Track total uses

  // Validity Period
  validFrom DateTime  @map("valid_from")
  validUntil DateTime @map("valid_until")

  // Targeting (optional restrictions)
  isFirstOrderOnly Boolean  @default(false) @map("is_first_order_only") // Only for first-time buyers
  applicableProducts String[] @default([]) @map("applicable_products") // Product IDs (empty = all products)
  applicableTags     String[] @default([]) @map("applicable_tags") // Product tags (empty = all)

  // Status
  status   CouponStatus @default(ACTIVE)
  isPublic Boolean      @default(true) @map("is_public") // Show in promotions or hidden/private

  // Metadata
  createdBy String? @map("created_by") @db.VarChar(100) // Admin who created
  metadata  Json?   @db.JsonB

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  usages CouponUsage[]

  @@index([code], map: "coupons_code_idx")
  @@index([status], map: "coupons_status_idx")
  @@index([validFrom, validUntil], map: "coupons_validity_idx")
  @@index([isFirstOrderOnly], map: "coupons_first_order_idx")
  @@map("coupons")
}

// Coupon Usage History - Tracks who used which coupon and when
model CouponUsage {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Coupon Reference
  couponId String @map("coupon_id") @db.Text
  coupon   Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)

  // User who used the coupon
  userId String @map("user_id") @db.Text

  // Order where coupon was applied
  orderId String @map("order_id") @db.Text

  // Discount Applied
  discountAmount Decimal @map("discount_amount") @db.Decimal(10, 2) // Actual discount given
  orderAmount    Decimal @map("order_amount") @db.Decimal(10, 2) // Order total before discount

  // Timestamp
  usedAt DateTime @default(now()) @map("used_at")

  @@unique([couponId, orderId], map: "coupon_usage_coupon_order_unique")
  @@index([couponId], map: "coupon_usage_coupon_id_idx")
  @@index([userId], map: "coupon_usage_user_id_idx")
  @@index([orderId], map: "coupon_usage_order_id_idx")
  @@index([userId, couponId], map: "coupon_usage_user_coupon_idx")
  @@map("coupon_usages")
}

// ============================================
// REVIEWS SYSTEM
// ============================================

// Legacy Product Reviews table (pre-order system reviews)
// Kept for backward compatibility with existing review data
model Review {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  productId String  @map("product_id") @db.Text
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  variantId String?         @map("variant_id") @db.Text
  variant   ProductVariant? @relation(fields: [variantId], references: [id], onDelete: SetNull)

  // Reviewer Information
  reviewerName  String  @map("reviewer_name") @db.VarChar(150)
  reviewerEmail String? @map("reviewer_email") @db.VarChar(255)

  // Review Content
  rating  Int     @db.Integer
  title   String? @db.VarChar(255)
  comment String  @db.Text

  // Verification & Status
  isVerifiedPurchase Boolean @default(false) @map("is_verified_purchase")
  isApproved         Boolean @default(false) @map("is_approved")

  // Helpfulness
  helpfulCount   Int @default(0) @map("helpful_count")
  unhelpfulCount Int @default(0) @map("unhelpful_count")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([productId], map: "reviews_product_id_idx")
  @@index([variantId], map: "reviews_variant_id_idx")
  @@index([productId, isApproved], map: "reviews_product_approved_idx")
  @@index([rating], map: "reviews_rating_idx")
  @@index([createdAt(sort: Desc)], map: "reviews_created_at_idx")
  @@map("reviews")
}

// Order Review - Review for the entire order experience (delivery, packaging, service)
// One review per order per customer
model OrderReview {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Order being reviewed
  orderId String @unique @map("order_id") @db.Text
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // User who is reviewing (must be the order owner)
  userId String @map("user_id") @db.Text
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Overall Rating (1-5)
  overallRating Int @map("overall_rating") @db.Integer

  // Specific Ratings (1-5, optional)
  deliveryRating  Int? @map("delivery_rating") @db.Integer
  packagingRating Int? @map("packaging_rating") @db.Integer
  serviceRating   Int? @map("service_rating") @db.Integer

  // Review Content
  title   String? @db.VarChar(255)
  comment String? @db.Text

  // Review Images (URLs stored as array)
  imageUrls String[] @default([]) @map("image_urls")

  // Moderation & Status
  isApproved      Boolean   @default(false) @map("is_approved")
  moderationNotes String?   @map("moderation_notes") @db.Text
  moderatedAt     DateTime? @map("moderated_at")
  moderatedBy     String?   @map("moderated_by") @db.VarChar(100)

  // Helpfulness
  helpfulCount   Int @default(0) @map("helpful_count")
  unhelpfulCount Int @default(0) @map("unhelpful_count")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId], map: "order_reviews_user_id_idx")
  @@index([isApproved], map: "order_reviews_is_approved_idx")
  @@index([overallRating], map: "order_reviews_rating_idx")
  @@index([createdAt(sort: Desc)], map: "order_reviews_created_at_idx")
  @@map("order_reviews")
}

// Item Review - Review for individual items in an order
// One review per order item per customer
model ItemReview {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Order Item being reviewed
  orderItemId String    @unique @map("order_item_id") @db.Text
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  // Product reference (for aggregating product reviews)
  productId String  @map("product_id") @db.Text
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Variant reference (optional, for variant-specific reviews)
  variantId String?         @map("variant_id") @db.Text
  variant   ProductVariant? @relation(fields: [variantId], references: [id], onDelete: SetNull)

  // User who is reviewing
  userId String @map("user_id") @db.Text
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Rating (1-5)
  rating Int @db.Integer

  // Review Content
  title   String? @db.VarChar(255)
  comment String? @db.Text

  // Review Images (URLs stored as array)
  imageUrls String[] @default([]) @map("image_urls")

  // Verified Purchase (always true since linked to order item)
  isVerifiedPurchase Boolean @default(true) @map("is_verified_purchase")

  // Moderation & Status
  isApproved      Boolean   @default(false) @map("is_approved")
  moderationNotes String?   @map("moderation_notes") @db.Text
  moderatedAt     DateTime? @map("moderated_at")
  moderatedBy     String?   @map("moderated_by") @db.VarChar(100)

  // Helpfulness
  helpfulCount   Int @default(0) @map("helpful_count")
  unhelpfulCount Int @default(0) @map("unhelpful_count")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([productId], map: "item_reviews_product_id_idx")
  @@index([variantId], map: "item_reviews_variant_id_idx")
  @@index([userId], map: "item_reviews_user_id_idx")
  @@index([productId, isApproved], map: "item_reviews_product_approved_idx")
  @@index([rating], map: "item_reviews_rating_idx")
  @@index([createdAt(sort: Desc)], map: "item_reviews_created_at_idx")
  @@map("item_reviews")
}

// ============================================
// ORDERS SYSTEM
// ============================================

// Order Status Enum
enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  REFUNDED
  FAILED

  @@map("order_status")
}

// Payment Status Enum
enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED

  @@map("payment_status")
}

// Payment Method Enum
enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  UPI
  NET_BANKING
  WALLET
  COD
  EMI

  @@map("payment_method")
}

// Delivery Type Enum
enum DeliveryType {
  STANDARD
  EXPRESS
  SAME_DAY

  @@map("delivery_type")
}

// Main Orders table
model Order {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  // Order Identification
  orderNumber String @unique @map("order_number") @db.VarChar(50)

  // User Information
  userId String @map("user_id") @db.Text
  user   User   @relation("UserToOrders", fields: [userId], references: [id], onDelete: Restrict)

  // Order Status
  status OrderStatus @default(PENDING)

  // Pricing Details
  subtotal       Decimal @db.Decimal(10, 2)
  discountAmount Decimal @default(0.00) @map("discount_amount") @db.Decimal(10, 2)
  couponDiscount Decimal @default(0.00) @map("coupon_discount") @db.Decimal(10, 2)
  couponCode     String? @map("coupon_code") @db.VarChar(50)
  taxAmount      Decimal @default(0.00) @map("tax_amount") @db.Decimal(10, 2)
  deliveryFee    Decimal @default(0.00) @map("delivery_fee") @db.Decimal(10, 2)
  totalAmount    Decimal @map("total_amount") @db.Decimal(10, 2)

  // Delivery Information
  deliveryType         DeliveryType @default(STANDARD) @map("delivery_type")
  shippingAddressLine1 String       @map("shipping_address_line1") @db.VarChar(255)
  shippingAddressLine2 String?      @map("shipping_address_line2") @db.VarChar(255)
  shippingCity         String       @map("shipping_city") @db.VarChar(100)
  shippingState        String       @map("shipping_state") @db.VarChar(100)
  shippingPostalCode   String       @map("shipping_postal_code") @db.VarChar(20)
  shippingCountry      String       @default("India") @map("shipping_country") @db.VarChar(100)

  // Contact Information
  customerName  String @map("customer_name") @db.VarChar(200)
  customerEmail String @map("customer_email") @db.VarChar(255)
  customerPhone String @map("customer_phone") @db.VarChar(20)

  // Courier/Shipping Tracking
  externalOrderId   String?   @unique @map("external_order_id") @db.VarChar(100)
  trackingNumber    String?   @unique @map("tracking_number") @db.VarChar(100)
  courierName       String?   @map("courier_name") @db.VarChar(100)
  shippedAt         DateTime? @map("shipped_at")
  deliveredAt       DateTime? @map("delivered_at")
  estimatedDelivery DateTime? @map("estimated_delivery")

  // Order Lifecycle Timestamps
  confirmedAt DateTime? @map("confirmed_at")
  cancelledAt DateTime? @map("cancelled_at")

  // Cancellation Details
  cancellationReason String? @map("cancellation_reason") @db.Text
  cancelledBy        String? @map("cancelled_by") @db.VarChar(50)

  // Special Instructions
  orderNotes    String? @map("order_notes") @db.Text
  deliveryNotes String? @map("delivery_notes") @db.Text

  // Metadata
  metadata Json? @db.JsonB

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  items         OrderItem[]
  payments      Payment[]
  statusHistory OrderStatusHistory[]
  review        OrderReview?

  @@index([userId], map: "orders_user_id_idx")
  @@index([status], map: "orders_status_idx")
  @@index([orderNumber], map: "orders_order_number_idx")
  @@index([externalOrderId], map: "orders_external_order_id_idx")
  @@index([trackingNumber], map: "orders_tracking_number_idx")
  @@index([createdAt(sort: Desc)], map: "orders_created_at_idx")
  @@index([userId, status], map: "orders_user_status_idx")
  @@index([userId, createdAt(sort: Desc)], map: "orders_user_created_at_idx")
  @@map("orders")
}

// Order Items table
model OrderItem {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  orderId String @map("order_id") @db.Text
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Product Information
  productId String  @map("product_id") @db.Text
  product   Product @relation("OrderItemToProduct", fields: [productId], references: [id], onDelete: Restrict)

  variantId String         @map("variant_id") @db.Text
  variant   ProductVariant @relation("OrderItemToVariant", fields: [variantId], references: [id], onDelete: Restrict)

  // Snapshot of product details at time of order
  productName       String @map("product_name") @db.VarChar(255)
  productSlug       String @map("product_slug") @db.VarChar(255)
  variantSku        String @map("variant_sku") @db.VarChar(100)
  variantWeight     Int    @map("variant_weight")
  variantWeightUnit String @map("variant_weight_unit") @db.VarChar(10)

  // Pricing snapshot at time of order
  quantity        Int     @db.Integer
  unitPrice       Decimal @map("unit_price") @db.Decimal(10, 2)
  unitMrp         Decimal @map("unit_mrp") @db.Decimal(10, 2)
  discountPerUnit Decimal @default(0.00) @map("discount_per_unit") @db.Decimal(10, 2)
  totalPrice      Decimal @map("total_price") @db.Decimal(10, 2)

  // Product image snapshot
  productImageUrl String? @map("product_image_url") @db.Text

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  review ItemReview?

  @@index([orderId], map: "order_items_order_id_idx")
  @@index([productId], map: "order_items_product_id_idx")
  @@index([variantId], map: "order_items_variant_id_idx")
  @@map("order_items")
}

// Payment table
model Payment {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  orderId String @map("order_id") @db.Text
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Payment Details
  paymentMethod PaymentMethod @map("payment_method")
  paymentStatus PaymentStatus @default(PENDING) @map("payment_status")
  amount        Decimal       @db.Decimal(10, 2)
  currency      String        @default("INR") @db.VarChar(10)

  // Payment Gateway Information
  paymentGateway   String? @map("payment_gateway") @db.VarChar(50)
  gatewayOrderId   String? @unique @map("gateway_order_id") @db.VarChar(100)
  gatewayPaymentId String? @unique @map("gateway_payment_id") @db.VarChar(100)
  gatewaySignature String? @map("gateway_signature") @db.Text

  // Transaction Details
  transactionId   String?   @unique @map("transaction_id") @db.VarChar(100)
  transactionDate DateTime? @map("transaction_date")

  // Refund Information
  refundAmount    Decimal?  @default(0.00) @map("refund_amount") @db.Decimal(10, 2)
  refundedAt      DateTime? @map("refunded_at")
  refundReason    String?   @map("refund_reason") @db.Text
  refundReference String?   @map("refund_reference") @db.VarChar(100)

  // Failure Information
  failureReason String? @map("failure_reason") @db.Text
  failureCode   String? @map("failure_code") @db.VarChar(50)

  // Additional Details
  paymentMetadata Json? @db.JsonB

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([orderId], map: "payments_order_id_idx")
  @@index([paymentStatus], map: "payments_status_idx")
  @@index([gatewayOrderId], map: "payments_gateway_order_id_idx")
  @@index([gatewayPaymentId], map: "payments_gateway_payment_id_idx")
  @@index([transactionId], map: "payments_transaction_id_idx")
  @@map("payments")
}

// Order Status History
model OrderStatusHistory {
  id String @id @default(dbgenerated("gen_random_uuid()::TEXT")) @db.Text

  orderId String @map("order_id") @db.Text
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Status Change Details
  fromStatus OrderStatus? @map("from_status")
  toStatus   OrderStatus  @map("to_status")

  // Change Context
  changedBy String? @map("changed_by") @db.VarChar(50)
  reason    String? @db.Text
  notes     String? @db.Text

  // Metadata
  metadata Json? @db.JsonB

  // Timestamp
  createdAt DateTime @default(now()) @map("created_at")

  @@index([orderId], map: "order_status_history_order_id_idx")
  @@index([orderId, createdAt(sort: Desc)], map: "order_status_history_order_created_idx")
  @@map("order_status_history")
}
